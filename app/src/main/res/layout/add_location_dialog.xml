<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_add"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:weightSum="5"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <EditText
            android:id="@+id/dialog_LocationName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:hint="Location's name"
            android:maxLength="40"
            android:textColorHint="#555"

            android:typeface="normal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <EditText
            android:layout_width="0dp"
            android:id="@+id/dialog_LocationType"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:hint="Location's type"
            android:maxLength="40"
            android:textColorHint="#555"

            android:typeface="normal"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.7"
            android:id="@+id/dialog_LocationVicinity"
            android:hint="Location's vicinity"
            android:maxLength="40"
            android:textColorHint="#555"

            android:typeface="normal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addLocation_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:text="CANCEL"
                android:textAlignment="center"
                android:textColor="#555"
                android:textSize="17sp"
                android:fontFamily="@font/raleway_bold"
                />
            <Button
                android:id="@+id/addLocation_requestAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:text="SEND REQUEST"
                android:textAlignment="center"
                android:textColor="#555"
                android:textSize="17sp"
                android:fontFamily="@font/raleway_bold"
                />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>




